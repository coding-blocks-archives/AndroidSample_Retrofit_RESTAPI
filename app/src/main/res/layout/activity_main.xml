<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codingblocks.restapiretrofitjson.MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnUsers"
            android:text="Users"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"/>
        <Button
            android:id="@+id/btnPosts"
            android:text="Posts"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPost"
            android:textColor="@android:color/background_light" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnAlbums"
            android:text="Albums"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAlbum"
            android:textColor="@android:color/background_light" />
        <Button
            android:id="@+id/btnTodos"
            android:text="Todos"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorToDo"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</LinearLayout>
